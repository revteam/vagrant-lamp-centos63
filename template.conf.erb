<VirtualHost *:80>
        DocumentRoot /mnt/nas/local/<%= folder_name %>/
        ServerName <%= full_domain %>
        AccessFileName .htaccess
        ServerSignature On
        DirectoryIndex index.php index.html index.htm

        ErrorLog /var/log/httpd/<%= full_domain %>-error_log
        CustomLog /var/log/httpd/access_log combined

        Alias / "/mnt/nas/local/<%= folder_name %>/"

        <Directory "/mnt/nas/local/<%= folder_name %>/">
                allow from all
                Options -Indexes
                AllowOverride All
        </Directory>
</VirtualHost>
